{
  "compilerOptions": {
    "composite": true,
    "strict": false,
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "target": "ES2024",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "rewriteRelativeImportExtensions": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": [],
    "baseUrl": "..",
    "paths": {
      "@/bench/*": ["src/*"]
    }
  },
  "include": ["../src/**/*.ts", "../frameworks/vanilla/**/*"],
  "exclude": ["../src/**/*.tsx"]
}
