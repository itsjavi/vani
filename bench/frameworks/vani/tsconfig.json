{
  "compilerOptions": {
    "strict": true,
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "vani": ["../../../src/vani/index.ts"],
      "vani/*": ["../../../src/vani/*"]
    }
  },
  "exclude": ["dist", "node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
