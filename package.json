{
  "name": "@vanijs/vani",
  "version": "0.1.0",
  "description": "Web-standards-first UI runtime with explicit updates, fine-grained DOM ownership, and zero dependencies. No Virtual DOM, no JSX, no compiler. Built for SPA, SSR, and SSG.",
  "keywords": [
    "ui",
    "frontend",
    "framework",
    "web-standards",
    "dom",
    "fine-grained",
    "explicit-rendering",
    "no-virtual-dom",
    "no-jsx",
    "no-compiler",
    "ssr",
    "ssg",
    "hydration",
    "signals",
    "vanilla",
    "vanilla-js",
    "typescript",
    "zero-dependencies"
  ],
  "homepage": "https://itsjavi.com/vani",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itsjavi/vani.git"
  },
  "license": "MIT",
  "author": {
    "name": "Javier Aguilar"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/lib/index.d.mts",
        "default": "./dist/lib/index.mjs"
      }
    }
  },
  "module": "./dist/lib/index.mjs",
  "types": "./dist/lib/index.d.mts",
  "files": [
    "dist/lib/**/*",
    "package.json",
    "llms.txt",
    "DOCS.md",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rm -rf dist && vite build && pnpm run build:lib",
    "build:lib": "pnpm tsdown src/vani/index.ts --minify --out-dir dist/lib --dts",
    "dev": "vite",
    "format": "prettier --write . && pnpm dlx sort-package-json",
    "lint": "pnpm run typecheck && pnpm run lint:eslint && pnpm run lint:circular",
    "lint:circular": "pnpm dlx madge --circular --extensions ts src/",
    "lint:eslint": "eslint .",
    "lint:unused": "pnpm dlx knip --exclude exports",
    "prepublishOnly": "pnpm format && pnpm lint && pnpm run build:lib && pnpm publint",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@shikijs/langs": "^3.21.0",
    "@shikijs/themes": "^3.21.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/bun": "^1.3.6",
    "@types/node": "^25.0.9",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "lucide-static": "^0.562.0",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "publint": "^0.3.16",
    "shiki": "^3.21.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tsdown": "0.20.0-beta.4",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "npm:rolldown-vite@7.3.1"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/lib/index.d.mts",
        "default": "./dist/lib/index.mjs"
      }
    }
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.3.1"
    }
  }
}
